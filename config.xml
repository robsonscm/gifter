<?xml version='1.0' encoding='utf-8'?>
<widget id="stra0165.edumedia.ca.gifterV3" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>GifterStra</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- you can use any density that exists in the Android project -->
        <splash src="www/img/splash/gifter-splash-LDPI.png"    density="port-ldpi"/>
        <splash src="www/img/splash/gifter-splash-MDPI.png"    density="port-mdpi"/>
        <splash src="www/img/splash/gifter-splash-HDPI.png"    density="port-hdpi"/>
        <splash src="www/img/splash/gifter-splash-XHDPI.png" density="port-xhdpi"/>
        <splash src="www/img/splash/gifter-splash-XXHDPI.png"  density="port-xxhdpi"/>
        <splash src="www/img/splash/gifter-splash-XXXHDPI.png" density="port-xxxhdpi"/>
        <!---->
        <icon src="www/img/icons/gifter_ldpi_36.png"   density="ldpi" />
        <icon src="www/img/icons/gifter_mdpi_48.png"   density="mdpi" />
        <icon src="www/img/icons/gifter_hdpi_72.png"   density="hdpi" />
        <icon src="www/img/icons/gifter_xhdpi_96.png" density="xhdpi" />
        <icon src="www/img/icons/gifter_xxhdpi_144.png" density="xxhdpi" />
        <icon src="www/img/icons/gifter_xxxhdpi_192.png" density="xxxhdpi" />
        <!---->
    </platform>
    <preference name="Orientation" value="portrait" />
    <preference name="AutoHideSplashScreen" value="true" /> <!-- don't wait for script to hide the splashscreen -->
    <preference name="SplashScreenDelay" value="5000" />  <!--  wait 10 seconds before hiding splashscreen -->
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
